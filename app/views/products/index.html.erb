<h1><%= t("views.products.name_plur") %></h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.products.name") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to t("views.show"), product,
          class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to t("views.edit"), edit_product_path(product),
          class: "btn btn-outline-warning btn-sm" %></td>
        <td><%= link_to t("views.destroy"), product, method: :delete,
          class: "btn btn-outline-danger btn-sm", data: { confirm: t("views.are_you_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("views.products.new"), new_product_path, class: "btn btn-primary btn-sm" %>
