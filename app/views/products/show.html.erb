<p>
  <strong><%= t("activerecord.attributes.products.name") %>:</strong>
  <%= @product.name %>
</p>

<div class="row small-font">
  <div class="col-4">
    <div class="card">
      <% varieties = @product.varieties.first.split(", ") %>
      <div class="card-header text-center text-uppercase">
        <b>
          <%= t("views.with_count", count: varieties.count) + " " +
            t("views.products.varieties") %>
        </b>
      </div>
      <div class="table-responsive">
        <table class="table table-hover table-all">
          <tbody>
            <% for variety in varieties %>
              <tr>
                <td><%= variety %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<br>

<%= link_to t("views.products.index"), products_path, class: "btn btn-primary icon-white" %>
