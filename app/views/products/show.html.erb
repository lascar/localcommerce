<p>
  <strong><%= t("activerecord.attributes.products.name") %>:</strong>
  <%= @product.name %>
</p>

<div class="row small-font">
  <div class="col-4">
    <div class="card">
      <% brands = @product.brands.first.split(", ") %>
      <div class="card-header text-center text-uppercase">
        <b>
          <%= t("views.with_count", count: brands.count) + " " +
            t("views.products.brands") %>
        </b>
      </div>
      <div class="table-responsive">
        <table class="table table-hover">
          <tbody>
            <% for brand in brands %>
              <tr>
                <td style="width:100%"><%= brand %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

